Arithmetic Expansion

Numbers
    # echo $((0)) $((42)) $((-12))
    0 42 -12

    # echo $((00)) $((052))
    0 42

    # echo $((0x0)) $((0x2A)) $((0x2a))
    0 42 42

Variables
    # x=42
    # echo $((x))
    42
    # somewhatLongerName=9999
    # echo $((somewhatLongerName))
    9999

Unary Operations
    # echo $((+x)) $((-x)) $((~x)) $((!x))
    42 -42 -43 0

    # z=0
    # echo $((+z)) $((-z)) $((~z)) $((!z))
    0 0 -1 1

Binary Operations
    # echo $((3*4)) $((5/3)) $((6/3)) $((7/3)) $((3/2)) $((-3/2))
    12 1 2 2 1 -1

    alas, % is remainder, not modulo
    # echo $((5%3)) $((6%3)) $((7%3)) $((-5%3)) $((-6%3)) $((-7%3))
    2 0 1 -2 0 -1

    # echo $((3+4)) $((5-3))
    7 2

    # echo $((3<<2)) $((7>>2))
    12 1

    # echo $((1<2)) $((1<=2)) $((2<2)) $((2<=2)) $((3<2)) $((3<=2))
    1 1 0 1 0 0
    # echo $((1>2)) $((1>=2)) $((2>2)) $((2>=2)) $((3>2)) $((3>=2))
    0 0 0 1 1 1

    # echo $((1==1)) $((1==2)) $((1!=1)) $((1!=2))
    1 0 0 1

    # echo $((0xe&0x7)) $((0xe^0x7)) $((0xe|0x7))
    6 9 15

    # echo $((0&&0)) $((1&&0)) $((2&&4)) $((0&&8))
    0 0 1 0

    # echo $((0&&0)) $((1||0)) $((2||4)) $((0||8))
    0 1 1 1

Conditional expressions
    # echo $((1?2:3)) $((0?1:2))
    2 2

    # echo $((1?2:3?4:5))
    2

    # echo $((1?2?3:4:5))
    3

Order of operations
    # echo $((3+4*5)) $((3*4+5))
    23 17

Subexpressions
    # echo $(((3+4)*5)) $((3*(4+5)))
    35 27

Assignment
    # unset x; echo $((x=10))
    10
    # echo $x
    10
    # echo $((x+=3)) $((x-=1)) $((x*=5)) $((x/=3)) $((x%=13))
    13 12 60 20 7
    # echo $((x<<=2)) $((x>>=1)) $((x&=7)) $((x|=1)) $((x^=2))
    28 14 6 7 5
    # echo $((x=y=5))
    5
    # echo $x $y
    5 5
    # echo $((x*=y+=2))
    35
    # echo $x $y
    35 7

Parsing whitespace
    # x=42
    # echo $(( 0 ? 1 : ~ ( z = 3 + 4 ) * x - 5 ))
    -341
    # echo $z
    7


